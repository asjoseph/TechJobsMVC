<h1>@ViewBag.title</h1>

<form method= 'POST' action="/Search/Results">

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@(column.Key == ViewBag.searchType)"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields 
    // create a loop to display each job passed in from the controller. 
    // You should put each job in its own table, with one job field per row.
    // Add the CSS class "job-listing" to each of the tables to get some nice styling, courtesy of Eliot's work!
    
    @foreach (Dictionary<string, string> job in ViewBag.jobs)
    {
        <table class="job-listing" table-striped>
            @foreach (KeyValuePair<string, string> jobDisplay in job)
            {
                <tr>
                    <td>@jobDisplay.Key :</td>
                    <td>@jobDisplay.Value</td>
                </tr>
            }
        </table>

     }
 }